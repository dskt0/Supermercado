<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ActivityNoPerecederos">

    <TextView
        android:id="@+id/txtPP"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="PRODUCTOS PERECEDEROS"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        app:srcCompat="@drawable/noperecederos2" />

    <EditText
        android:id="@+id/txtCodigo2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Codigo"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtDesc2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtPrecio2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtDias"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Dias para vencer"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtNuevoValor"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Nuevo valor"
        android:inputType="text" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALCULAR NUEVO VALOR" />

    <Button
        android:id="@+id/btnCrear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR" />

    <Button
        android:id="@+id/btnConsultar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTAR" />
</LinearLayout>