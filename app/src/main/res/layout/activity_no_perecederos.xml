<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ActivityPerecederos">

    <TextView
        android:id="@+id/txtNP"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="PRODUCTOS NO PERECEDEROS"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="386dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/noperecen" />

    <EditText
        android:id="@+id/txtCodigo3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Codigo"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtDesc3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtTipo"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Tipo de producto"
        android:inputType="text" />

    <Button
        android:id="@+id/btnCrear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAR" />

    <Button
        android:id="@+id/btnConsultar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONSULTAR" />
</LinearLayout>